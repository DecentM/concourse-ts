{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,

    "jsx": "preserve",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",

    "baseUrl": "./",
    "outDir": "dist",

    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
