{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,

    "jsx": "react",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",

    "baseUrl": "./",
    "outDir": "dist",

    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },

  "include": [
    "./src"
  ],

  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts"
  ]
}
