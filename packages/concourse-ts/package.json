{
  "name": "@decentm/concourse-ts",
  "version": "0.10.6",
  "homepage": "https://github.com/DecentM/concourse-ts/tree/main/packages/concourse-ts",
  "repository": "https://github.com/DecentM/concourse-ts.git",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "build": "nx build",
    "dev": "ts-node-dev playground.ts && fly vp -c playground.yml",
    "dev:cli": "rimraf .ci && ts-node-dev src/cli/cli-test.ts",
    "t": "yarn test",
    "test": "c8 --reporter=lcov --reporter=text ava"
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "readmeFile": "../../README.md",
    "displayName": "Child Package",
    "tsconfig": "./tsconfig.lib.json"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--no-warnings",
      "--loader=ts-node/esm/transpile-only"
    ]
  },
  "dependencies": {
    "@swc/helpers": "~0.4.11",
    "fast-glob": "^3.2.12",
    "mkdirp": "^2.1.3",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "verror": "^1.10.1",
    "yaml": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@types/prettier": "^2.7.2",
    "@types/verror": "^1.10.6",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "cpy-cli": "^4.2.0",
    "husky": "^8.0.2",
    "rimraf": "^4.3.1",
    "tmp-promise": "^3.0.3",
    "ts-node-dev": "^2.0.0",
    "typed-emitter": "^2.1.0"
  }
}
