{
  "name": "concourse-ts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@4.3.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build",
    "test": "nx affected --target=test",
    "generate-dependabot": "tsx bin/generate-dependabot.ts",
    "update-tsconfig-paths": "tsx bin/update-tsconfig-paths.ts",
    "prepare": "husky install",
    "docs": "typedoc",
    "concourse-ts": "tsx packages/concourse-ts-cli/src/bin.ts",
    "ci": "yarn concourse-ts compile && yarn concourse-ts transform",
    "postci": "yarn concourse-ts transform"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@moonrepo/cli": "^1.34.3",
    "@types/eslint": "^9",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "8.29.1",
    "@typescript-eslint/parser": "8.29.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "10.1.2",
    "husky": "^9.1.7",
    "jsdom": "~26.0.0",
    "prettier": "^3.5.3",
    "sort-package-json": "^3.0.0",
    "tsx": "^4.19.3",
    "typedoc": "^0.27.9",
    "typedoc-github-wiki-theme": "^2.1.0",
    "typedoc-plugin-coverage": "^3.4.1",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "engines": {
    "node": "20.16.0"
  }
}
