{
  "name": "@decentm/concourse-ts",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc && tsc-alias",
    "dev": "ts-node-dev -r tsconfig-paths/register playground.ts && fly vp -c playground.yml",
    "dev:cli": "ts-node-dev -r tsconfig-paths/register src/cli/index.ts",
    "test": "c8 ava",
    "t": "yarn test",
    "ci:generate-config": "ts-node examples/corpity-corp/dev/index.ts"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--require",
      "tsconfig-paths/register",
      "--loader=ts-node/esm"
    ]
  },
  "resolutions": {
    "react": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/verror": "^1.10.6",
    "@types/yargs": "^17.0.17",
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "ink": "^3.2.0",
    "ink-spinner": "^4.0.3",
    "ink-table": "^3.0.0",
    "ink-use-stdout-dimensions": "^1.0.5",
    "react": "^18.2.0",
    "verror": "^1.10.1",
    "yaml": "^2.2.0",
    "yargs": "^17.6.2"
  }
}
