{
  "name": "concourse-ts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build",
    "test": "nx affected --target=test",
    "generate-dependabot": "ts-node --transpile-only bin/generate-dependabot.ts",
    "update-tsconfig-paths": "ts-node --transpile-only bin/update-tsconfig-paths.ts",
    "prepare": "husky install",
    "docs": "typedoc",
    "concourse-ts": "ts-node --transpile-only -r tsconfig-paths/register packages/concourse-ts-cli/bin/concourse-ts",
    "ci": "yarn concourse-ts compile",
    "postci": "yarn concourse-ts transform"
  },
  "dependencies": {
    "@swc/helpers": "~0.5.1"
  },
  "devDependencies": {
    "@nrwl/eslint-plugin-nx": "16.5.0",
    "@nrwl/js": "16.5.1",
    "@nrwl/linter": "16.5.0",
    "@nrwl/workspace": "16.5.1",
    "@swc/cli": "~0.1.62",
    "@swc/core": "^1.3.68",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "~8.44.0",
    "eslint-config-prettier": "8.8.0",
    "husky": "^8.0.3",
    "jsdom": "~22.1.0",
    "nx": "16.5.0",
    "prettier": "^3.0.0",
    "sort-package-json": "^2.5.1",
    "typedoc": "^0.24.8",
    "typedoc-github-wiki-theme": "^1.1.0",
    "typedoc-plugin-coverage": "^2.1.0",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "~5.1.6"
  }
}