{
  "name": "@decentm/concourse-ts",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc && tsc-alias",
    "dev": "ts-node-dev -r tsconfig-paths/register playground.ts && fly vp -c playground.yml",
    "test": "c8 ava",
    "t": "yarn test"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--require",
      "tsconfig-paths/register",
      "--loader=ts-node/esm"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@types/verror": "^1.10.6",
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "verror": "^1.10.1",
    "yaml": "^2.2.0"
  }
}
